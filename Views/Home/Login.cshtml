@{
    ViewData["Title"] = "Login";
}

<div class="centrado">
    <form method="post" action='@Url.Action("VerificarLogin")'>
        <div class="mb-3">
            <label for="userInput" class="form-label">Usuario</label>
            <input type="text" class="form-control" id="userInput" name="user">
        </div>
        <div class="mb-3">
            <label for="passwordInput" class="form-label">Contraseña</label>
            <input type="password" class="form-control" id="passwordInput" aria-describedby="olvidoPassword" name="password">
            <div id="olvidoPassword" class="form-text"><a href='@Url.Action("Olvide")'>Olvidaste tu contraseña?</a></div>
        </div>
        <button type="submit" class="btn btn-primary">Iniciar Sesion</button>
        <a href='@Url.Action("Registro")'><button type="button" class="btn btn-outline-secondary">Eres Nuevo? Registrate</button></a>
    </form>
</div>